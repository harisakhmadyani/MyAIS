<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFBE52">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_rounded_10_right"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stretchColumns="0"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TableRow>
                        <TextView
                            android:id="@+id/Nama"
                            android:maxEms="4"
                            android:text="Nama"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/NIK"
                            android:maxEms="4"
                            android:text="NIK"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/Wilayah"
                            android:maxEms="4"
                            android:text="Wilayah"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_local_hospital_24"
                    android:layout_gravity="center"
                    android:visibility="visible">
                </ImageView>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFBE52" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="1">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:stretchColumns="2">
                            <TableRow>
                                <TextView
                                    android:text="Data Kejadian"
                                    android:layout_span="3"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:text="Waktu"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                                <TextView
                                    android:maxEms="4"
                                    android:text=":"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                                <TextView
                                    android:id="@+id/wkt"
                                    android:maxEms="4"
                                    android:text="-"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:text="Lokasi "
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    />
                                <TextView
                                    android:maxEms="4"
                                    android:text=":"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                                <TextView
                                    android:id="@+id/lks"
                                    android:maxEms="4"
                                    android:text="-"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:text="Tipe Kecelakaan"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                                <TextView
                                    android:maxEms="4"
                                    android:text=":"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                                <TextView
                                    android:id="@+id/tpKec"
                                    android:maxEms="4"
                                    android:text="-"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:text="Kronologi"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                                <TextView
                                    android:maxEms="4"
                                    android:text=":"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                                <TextView
                                    android:id="@+id/kron"
                                    android:maxEms="4"
                                    android:text="-"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:text="Status"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                                <TextView
                                    android:maxEms="4"
                                    android:text=":"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="3dp"/>
                                <TextView
                                    android:id="@+id/sts"
                                    android:maxEms="4"
                                    android:text="-"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="3dp"/>
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
